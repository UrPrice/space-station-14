<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      xmlns:ui="clr-namespace:Content.Client.Shuttles.UI"
                      Title="{Loc 'radar-console-window-title'}"
                      MinSize="256 256"><!--SetSize="648 648" --><!-- SS220 ADD TOGGLE IFF -->

    <!-- SS220 ADD TOGGLE IFF start -->
    <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
        <ui:ShuttleNavControl Name="RadarScreen"
                              Margin="4"
                              HorizontalExpand="True"
                              VerticalExpand="True"/>
        <BoxContainer Orientation="Vertical" HorizontalExpand="True">
            <controls:StripeBack MinSize="48 48">
                <Label Name="NavSettingsLabel" Text="{Loc 'shuttle-console-nav-settings'}"
                                VerticalExpand="True"
                                HorizontalAlignment="Center"/>
            </controls:StripeBack>
            <Button Name="IFFToggle"
                    Text="{Loc 'shuttle-console-iff-toggle'}"
                    TextAlign="Center"
                    ToggleMode="True"
                    VerticalAlignment="Top"
                    VerticalExpand="False"/>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
